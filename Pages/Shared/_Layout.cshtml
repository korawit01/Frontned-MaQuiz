@{
    Layout = null; // Set this to null to indicate this is a layout file
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Link to your CSS file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" /> <!-- Optional: Font Awesome for icons -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Optional: jQuery -->
</head>
<body>
    <header>
        <nav>
            <h1>Quiz System</h1>
            <!-- Add navigation links here if needed -->
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody() <!-- This is where your page content will be rendered -->
    </main>
    <footer>
        <p>&copy; 2024 Quiz System</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
